# ═══════════════════════════════════════════════════════════════
# Frontend Environment Configuration
# ═══════════════════════════════════════════════════════════════

# ────────────────────────────────────────────────────────────────
# 🌍 Environment
# ────────────────────────────────────────────────────────────────
NODE_ENV=development
VITE_APP_ENV=development

# ────────────────────────────────────────────────────────────────
# 🖥️ Service Ports
# ────────────────────────────────────────────────────────────────
VITE_PORT=6060

# ────────────────────────────────────────────────────────────────
# 🔌 Backend API Configuration
# ────────────────────────────────────────────────────────────────
VITE_API_BASE_URL=http://localhost:7075/api
VITE_BACKEND_PROTOCOL=http
VITE_BACKEND_HOST=localhost
VITE_BACKEND_PORT=7075

# ────────────────────────────────────────────────────────────────
# 🌉 Bridge Service Configuration (WebSocket for Weight Scales)
# ────────────────────────────────────────────────────────────────
VITE_BRIDGE_PROTOCOL=ws
VITE_BRIDGE_HOST=localhost
VITE_BRIDGE_PORT=5000
VITE_BRIDGE_WS_URL=ws://localhost:5000

# WebSocket Endpoints
# - Small Scale: ws://localhost:5000/ws/scale/small
# - Big Scale: ws://localhost:5000/ws/scale/big

# ────────────────────────────────────────────────────────────────
# 🔐 Authentication Configuration
# ────────────────────────────────────────────────────────────────
VITE_AUTH_TOKEN_KEY=pk_auth_token
VITE_USER_DATA_KEY=pk_auth_user
VITE_SESSION_TIMEOUT_HOURS=168

# ────────────────────────────────────────────────────────────────
# 📱 Application Information
# ────────────────────────────────────────────────────────────────
VITE_APP_NAME=Partial Picking System
VITE_APP_VERSION=1.0.0
VITE_COMPANY_NAME=Newly Weds Foods Thailand

# ────────────────────────────────────────────────────────────────
# ⚖️ WebSocket Configuration
# ────────────────────────────────────────────────────────────────
# NOTE: Polling speed (100ms default) is controlled by Bridge Service
#       on Windows via PKBridgeConfigWizard. Do not add polling settings here.

VITE_WEBSOCKET_RECONNECT_INTERVAL_MS=3000
VITE_WEBSOCKET_MAX_RECONNECT_ATTEMPTS=10

# ────────────────────────────────────────────────────────────────
# 🚀 Performance Settings
# ────────────────────────────────────────────────────────────────
VITE_API_TIMEOUT_MS=10000
VITE_ENABLE_DEV_TOOLS=true
