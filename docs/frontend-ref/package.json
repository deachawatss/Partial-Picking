{
  "name": "pk-frontend",
  "version": "1.0.0",
  "description": "PK (Partial Picking System) - Angular 20 Frontend with NWFTH Brown Theme",
  "scripts": {
    "ng": "ng",
    "start": "npm run env:config && ng serve --port 6060 --host 0.0.0.0",
    "dev": "npm run env:config && ng serve --port 6060 --host 0.0.0.0",
    "dev:frontend": "npm run env:config && ng serve --port 6060 --host 0.0.0.0",
    "build": "npm run env:config && ng build",
    "build:prod": "npm run env:config:prod && ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "env:config": "node scripts/env-config.js development",
    "env:config:prod": "node scripts/env-config.js production",
    "optimize:images": "node scripts/optimize-images.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.2",
    "@angular/common": "^20.3.2",
    "@angular/compiler": "^20.3.2",
    "@angular/core": "^20.3.2",
    "@angular/forms": "^20.3.2",
    "@angular/platform-browser": "^20.3.2",
    "@angular/platform-browser-dynamic": "^20.3.2",
    "@angular/router": "^20.3.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.2",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.7.0",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "sharp": "^0.34.4",
    "typescript": "~5.9.2"
  }
}
