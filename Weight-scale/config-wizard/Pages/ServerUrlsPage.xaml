<Page x:Class="PK.BridgeService.ConfigWizard.Pages.ServerUrlsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ServerUrls">

    <StackPanel>
        <TextBlock Style="{StaticResource TitleText}"
                  Text="Server URLs Configuration"/>

        <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
            Configure the URLs for the frontend and backend servers. The bridge service will connect to these servers.
        </TextBlock>

        <GroupBox Header="Server Configuration">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Frontend URL:"/>
                <TextBox x:Name="FrontendUrlTextBox"
                        Grid.Row="0" Grid.Column="1"
                        Text="http://192.168.0.10:6060"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Backend URL:"/>
                <TextBox x:Name="BackendUrlTextBox"
                        Grid.Row="1" Grid.Column="1"
                        Text="http://192.168.0.10:7075"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Bridge Service Port:"/>
                <TextBox x:Name="BridgePortTextBox"
                        Grid.Row="2" Grid.Column="1"
                        Text="5000"/>
            </Grid>
        </GroupBox>

        <TextBlock Style="{StaticResource HelpText}"
                  Margin="0,10,0,0">
            ðŸ’¡ The bridge service will run locally on this workstation at ws://localhost:[port]/ws/scale
        </TextBlock>
    </StackPanel>
</Page>
