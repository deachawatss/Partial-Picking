<Page x:Class="PK.BridgeService.ConfigWizard.Pages.ReviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Review"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Style="{StaticResource TitleText}" Text="Review Configuration"/>
            <TextBlock Text="Please review your configuration before installation. Click any section to edit."
                      FontSize="12"
                      Foreground="#666"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Configuration Cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Workstation Information Card -->
                <Border Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="📍 Workstation Information"
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="#8B4513"
                                      Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Workstation Name:" FontWeight="SemiBold" Width="150"/>
                                <TextBlock x:Name="WorkstationNameText" Text="WS-001"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Machine Name:" FontWeight="SemiBold" Width="150"/>
                                <TextBlock x:Name="MachineNameText" Text="DESKTOP-ABC123"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="Edit"
                                Style="{StaticResource SecondaryButton}"
                                Click="EditWorkstation_Click"
                                VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Database Configuration Card -->
                <Border Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="🗄️ Database Configuration"
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="#8B4513"
                                      Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Server:" FontWeight="SemiBold" Width="150"/>
                                <TextBlock x:Name="DatabaseServerText" Text="192.168.0.86"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Port:" FontWeight="SemiBold" Width="150"/>
                                <TextBlock x:Name="DatabasePortText" Text="49381"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Database:" FontWeight="SemiBold" Width="150"/>
                                <TextBlock x:Name="DatabaseNameText" Text="TFCPILOT3"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Username:" FontWeight="SemiBold" Width="150"/>
                                <TextBlock x:Name="DatabaseUsernameText" Text="NSW"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="Edit"
                                Style="{StaticResource SecondaryButton}"
                                Click="EditDatabase_Click"
                                VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Server URLs Card -->
                <Border Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="🌐 Server URLs"
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="#8B4513"
                                      Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Frontend URL:" FontWeight="SemiBold" Width="150"/>
                                <TextBlock x:Name="FrontendUrlText" Text="http://192.168.0.10:6060"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Backend URL:" FontWeight="SemiBold" Width="150"/>
                                <TextBlock x:Name="BackendUrlText" Text="http://192.168.0.10:7075"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Bridge Port:" FontWeight="SemiBold" Width="150"/>
                                <TextBlock Text="5000" Foreground="#666"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="Edit"
                                Style="{StaticResource SecondaryButton}"
                                Click="EditUrls_Click"
                                VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Scale Configuration Card -->
                <Border Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="⚖️ Scale Configuration"
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="#8B4513"
                                      Margin="0,0,0,10"/>

                            <!-- SMALL Scale -->
                            <Border Background="#F5F5F5"
                                   BorderBrush="#DDD"
                                   BorderThickness="1"
                                   CornerRadius="4"
                                   Padding="10"
                                   Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="SMALL Scale"
                                              FontWeight="SemiBold"
                                              Foreground="#8B4513"
                                              Margin="0,0,0,5"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="Status:" FontWeight="SemiBold" Width="80"/>
                                        <TextBlock x:Name="SmallScaleStatusText" Text="Enabled"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="COM Port:" FontWeight="SemiBold" Width="80"/>
                                        <TextBlock x:Name="SmallScalePortText" Text="Not configured"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="Baud Rate:" FontWeight="SemiBold" Width="80"/>
                                        <TextBlock x:Name="SmallScaleBaudText" Text="9600"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="Model:" FontWeight="SemiBold" Width="80"/>
                                        <TextBlock x:Name="SmallScaleModelText" Text="AND GX-5000"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- BIG Scale -->
                            <Border Background="#F5F5F5"
                                   BorderBrush="#DDD"
                                   BorderThickness="1"
                                   CornerRadius="4"
                                   Padding="10">
                                <StackPanel>
                                    <TextBlock Text="BIG Scale"
                                              FontWeight="SemiBold"
                                              Foreground="#8B4513"
                                              Margin="0,0,0,5"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="Status:" FontWeight="SemiBold" Width="80"/>
                                        <TextBlock x:Name="BigScaleStatusText" Text="Enabled"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="COM Port:" FontWeight="SemiBold" Width="80"/>
                                        <TextBlock x:Name="BigScalePortText" Text="Not configured"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="Baud Rate:" FontWeight="SemiBold" Width="80"/>
                                        <TextBlock x:Name="BigScaleBaudText" Text="9600"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="Model:" FontWeight="SemiBold" Width="80"/>
                                        <TextBlock x:Name="BigScaleModelText" Text="AND GX-100"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="Edit"
                                Style="{StaticResource SecondaryButton}"
                                Click="EditScales_Click"
                                VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Installation Summary Card -->
                <Border Background="#E8F5E9"
                        BorderBrush="#4CAF50"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="✅ Ready to Install"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="#2E7D32"
                                  Margin="0,0,0,10"/>

                        <TextBlock TextWrapping="Wrap"
                                  Foreground="#666"
                                  Margin="0,0,0,5">
                            The installer will:
                        </TextBlock>

                        <StackPanel Margin="10,5,0,0">
                            <TextBlock Text="• Deploy bridge service files to C:\Program Files\PK\BridgeService"
                                      Foreground="#666"
                                      Margin="0,3"/>
                            <TextBlock Text="• Create and configure appsettings.json"
                                      Foreground="#666"
                                      Margin="0,3"/>
                            <TextBlock Text="• Register workstation in database (TFC_workstation2)"
                                      Foreground="#666"
                                      Margin="0,3"/>
                            <TextBlock Text="• Install Windows Service (PK.BridgeService)"
                                      Foreground="#666"
                                      Margin="0,3"/>
                            <TextBlock Text="• Configure service for automatic startup"
                                      Foreground="#666"
                                      Margin="0,3"/>
                            <TextBlock Text="• Start the bridge service"
                                      Foreground="#666"
                                      Margin="0,3"/>
                        </StackPanel>

                        <TextBlock Text="Click 'Next' to begin installation."
                                  FontWeight="SemiBold"
                                  Foreground="#2E7D32"
                                  Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
