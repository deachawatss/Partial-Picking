<Page x:Class="PK.BridgeService.ConfigWizard.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Welcome">

    <StackPanel>
        <TextBlock Style="{StaticResource TitleText}"
                  Text="Welcome to PK Bridge Configuration Wizard"/>

        <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
            This wizard will guide you through the configuration of the PK Bridge Service for your workstation.
            The service enables communication between USB weight scales and the PK partial picking system.
        </TextBlock>

        <GroupBox Header="Workstation Information">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Workstation Name:"/>
                <TextBox x:Name="WorkstationNameTextBox"
                        Grid.Row="0" Grid.Column="1"
                        IsReadOnly="True"/>

                <Label Grid.Row="1" Grid.Column="0" Content="IP Address:"/>
                <TextBox x:Name="WorkstationIPTextBox"
                        Grid.Row="1" Grid.Column="1"
                        IsReadOnly="True"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                          Style="{StaticResource HelpText}"
                          Text="Auto-detected workstation information will be used for registration."/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Configuration Steps">
            <StackPanel>
                <TextBlock Text="• Database Configuration" Margin="0,5"/>
                <TextBlock Text="• Server URLs" Margin="0,5"/>
                <TextBlock Text="• COM Port Detection and Scale Assignment" Margin="0,5"/>
                <TextBlock Text="• Scale Testing &amp; Verification" Margin="0,5"/>
                <TextBlock Text="• Advanced Settings (optional)" Margin="0,5"/>
                <TextBlock Text="• Review &amp; Install" Margin="0,5"/>
            </StackPanel>
        </GroupBox>

        <TextBlock TextWrapping="Wrap"
                  Foreground="{StaticResource WarningBrush}"
                  Margin="0,20,0,0">
            ⚠️ Important: Make sure USB weight scales are connected to your workstation before proceeding.
        </TextBlock>

        <TextBlock TextWrapping="Wrap"
                  Style="{StaticResource HelpText}"
                  Margin="0,10,0,0">
            Click "Next" to begin the configuration process.
        </TextBlock>
    </StackPanel>
</Page>
