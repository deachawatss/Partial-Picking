<Page x:Class="PK.BridgeService.ConfigWizard.Pages.DatabaseConfigPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DatabaseConfig">

    <StackPanel>
        <TextBlock Style="{StaticResource TitleText}"
                  Text="Database Configuration"/>

        <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
            Configure the connection to your SQL Server database. The bridge service will use this
            connection to register scales and workstations in TFC_Weighup_Controllers2 and TFC_Weighup_WorkStations2 tables.
        </TextBlock>

        <GroupBox Header="SQL Server Connection">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Server:"/>
                <TextBox x:Name="ServerTextBox"
                        Grid.Row="0" Grid.Column="1"
                        Text="192.168.0.86"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Port:"/>
                <TextBox x:Name="PortTextBox"
                        Grid.Row="1" Grid.Column="1"
                        Text="49381"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Database Name:"/>
                <TextBox x:Name="DatabaseNameTextBox"
                        Grid.Row="2" Grid.Column="1"
                        Text="TFCPILOT3"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Username:"/>
                <TextBox x:Name="UsernameTextBox"
                        Grid.Row="3" Grid.Column="1"
                        Text="NSW"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Password:"/>
                <PasswordBox x:Name="PasswordBox"
                            Grid.Row="4" Grid.Column="1"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Connection Timeout (sec):"/>
                <TextBox x:Name="TimeoutTextBox"
                        Grid.Row="5" Grid.Column="1"
                        Text="30"/>

                <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button x:Name="TestConnectionButton"
                           Content="Test Connection"
                           Click="TestConnectionButton_Click"
                           Width="150"/>
                    <TextBlock x:Name="ConnectionStatusText"
                              VerticalAlignment="Center"
                              Margin="15,0,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <TextBlock Style="{StaticResource HelpText}"
                  Margin="0,10,0,0">
            ðŸ’¡ Click "Test Connection" to verify database connectivity before proceeding.
        </TextBlock>
    </StackPanel>
</Page>
