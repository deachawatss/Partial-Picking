<Window x:Class="PK.BridgeService.ConfigWizard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PK Bridge Service Configuration Wizard"
        Width="900" Height="700"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowState="Normal"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,15">
            <StackPanel>
                <TextBlock Text="PK Bridge Service Configuration"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock x:Name="StepTitleText"
                          Text="Welcome"
                          FontSize="16"
                          Foreground="White"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Step Progress Indicator -->
        <Border x:Name="StepProgressPanel"
                Grid.Row="0"
                Background="{StaticResource PrimaryBrush}"
                Padding="20,10"
                Margin="0,80,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="Step1Indicator" Text="① Welcome" Margin="5" FontWeight="Bold" Foreground="White" FontSize="13"/>
                <TextBlock Text="→" Margin="5" Foreground="White" FontSize="13"/>
                <TextBlock x:Name="Step2Indicator" Text="② Database" Margin="5" Foreground="White" Opacity="0.7" FontSize="13"/>
                <TextBlock Text="→" Margin="5" Foreground="White" FontSize="13"/>
                <TextBlock x:Name="Step3Indicator" Text="③ URLs" Margin="5" Foreground="White" Opacity="0.7" FontSize="13"/>
                <TextBlock Text="→" Margin="5" Foreground="White" FontSize="13"/>
                <TextBlock x:Name="Step4Indicator" Text="④ Scales" Margin="5" Foreground="White" Opacity="0.7" FontSize="13"/>
                <TextBlock Text="→" Margin="5" Foreground="White" FontSize="13"/>
                <TextBlock x:Name="Step5Indicator" Text="⑤ Testing" Margin="5" Foreground="White" Opacity="0.7" FontSize="13"/>
                <TextBlock Text="→" Margin="5" Foreground="White" FontSize="13"/>
                <TextBlock x:Name="Step6Indicator" Text="⑥ Review" Margin="5" Foreground="White" Opacity="0.7" FontSize="13"/>
                <TextBlock Text="→" Margin="5" Foreground="White" FontSize="13"/>
                <TextBlock x:Name="Step7Indicator" Text="⑦ Install" Margin="5" Foreground="White" Opacity="0.7" FontSize="13"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,40,0,0">
            <Border Background="{StaticResource SurfaceBrush}"
                    Margin="20"
                    Padding="30"
                    CornerRadius="8"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </ScrollViewer>

        <!-- Navigation Buttons -->
        <Border x:Name="NavigationPanel"
                Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="BackButton"
                           Content="← Back"
                           Click="BackButton_Click"
                           IsEnabled="False"
                           Style="{StaticResource SecondaryButton}"
                           Margin="0,0,10,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="CancelButton"
                           Content="Cancel"
                           Click="CancelButton_Click"
                           Style="{StaticResource SecondaryButton}"
                           Margin="0,0,10,0"/>
                    <Button x:Name="NextButton"
                           Content="Next →"
                           Click="NextButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
